{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://your-backend-api.com/api/$1"
    }
  ],
  "redirects": [
    {
      "source": "/peptide/:path*",
      "destination": "/peptide/:path*",
      "statusCode": 200
    },
    {
      "source": "/blog/:path*", 
      "destination": "/blog/:path*",
      "statusCode": 200
    },
    {
      "source": "/calculators/:path*",
      "destination": "/calculators/:path*", 
      "statusCode": 200
    },
    {
      "source": "/research/:path*",
      "destination": "/research/:path*",
      "statusCode": 200
    },
    {
      "source": "/peptides/:path*",
      "destination": "/peptides/:path*",
      "statusCode": 200
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}